<h2>New Product</h2>
  <%= form_for(@product) do |f| %>
    <%= render 'layouts/errors', object: f.object %>
      <p>
        <%= f.label :name%><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description, "Descrição" %><br />
        <%= f.text_field :description %>
      </p>
      <p>
         <%= f.submit "Criar Produto" %>
      </p>
  <% end %>