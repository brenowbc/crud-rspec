<h2>New Product</h2>
  <%= form_for(@product) do |f| %>
      <p>
        <%= f.label :name, "Nome" %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description, "Descrição" %><br />
        <%= f.text_field :description %>
      </p>
      <p>
         <%= f.submit "Criar Produto" %>
      </p>
  <% end %>